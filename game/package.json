{
  "name": "kernel-rpg-ring0",
  "version": "1.0.0",
  "description": "ring0 â€” Kernel Incident Training RPG. Learn Linux kernel internals through maze puzzles and CTF challenges.",
  "main": "main.js",
  "author": "0xCD4",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac --linux"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.ring0.kernel-rpg",
    "productName": "ring0",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["portable", "nsis"],
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "index.html",
      "styles.css",
      "app.js",
      "snakeLogic.js",
      "favicon.svg",
      "icon.png",
      "icon.ico",
      "fonts/**/*"
    ]
  }
}
